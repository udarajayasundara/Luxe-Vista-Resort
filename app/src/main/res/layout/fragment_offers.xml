<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 1. Early Bird Special -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/offerCaption1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Early Bird Special"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/offerPrice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20% off when booked 30 days in advance"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/offerDate1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valid: Year-round"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/offerType1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type: Non-refundable"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 2. Weekend Bliss -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/offerCaption2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weekend Bliss"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/offerPrice2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 nights and 3 days from LKR 199"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/offerDate2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valid: Friday to Sunday"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/offerType2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type: Breakfast &amp; spa included"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 3. Romantic Escape -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/offerCaption3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Romantic Escape"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/offerPrice3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From LKR 499 (includes dinner, massage &amp; boat ride)"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/offerDate3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valid: Year-round"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/offerType3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type: Min. 2-night stay"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 4. Long Stay Bonus -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/offerCaption4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Long Stay Bonus"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/offerPrice4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stay 3 nights, pay for 2"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/offerDate4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valid: Apr - Jun (Off-season)"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/offerType4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type: Deluxe &amp; Premium rooms"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 5. Family Fiesta -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/offerCaption5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Family Fiesta"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/offerPrice5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 kids &lt;10 stay free + activity pass"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/offerDate5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valid: School holidays"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/offerType5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type: Min. 2-night booking"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 6. Holiday Sparkle -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/offerCaption6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Holiday Sparkle"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/offerPrice6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15% off + festive buffet &amp; live music"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/offerDate6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valid: Dec 20 - Jan 5"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/offerType6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type: Advance booking required"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 7. Rejuvenate Retreat -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/offerCaption7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rejuvenate Retreat"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/offerPrice7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15% off room rate with spa package"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/offerDate7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valid: Weekdays only"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/offerType7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type: Min. spa value LKR 100"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 8. Celebrate With Us -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/offerCaption8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Celebrate With Us"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/offerPrice8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Free cake + room upgrade + 10% off bill"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/offerDate8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valid: Birthday week"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/offerType8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type: ID proof required"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
